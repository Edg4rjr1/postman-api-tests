		{
			"name": "skill check",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const response = pm.response.json();\r",
							"if (response && response.json && response.json.actorName) {\r",
							"    const actorName = response.json.actorName;\r",
							"\r",
							"    pm.collectionVariables.set(\"favoriteActor\", actorName);\r",
							"\r",
							"    console.log(\"Variável 'favoriteActor' definida como: \" + actorName);\r",
							"} else {\r",
							"    console.log(\"Propriedade 'actorName' não encontrada na resposta esperada.\");\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "apikey",
					"apikey": [
						{
							"key": "value",
							"value": "skillcheck",
							"type": "string"
						},
						{
